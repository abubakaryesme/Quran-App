<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Surah Name :"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_surah_no"
        app:layout_constraintStart_toEndOf="@+id/txt_surah_no"
        app:layout_constraintTop_toTopOf="@+id/txt_surah_no" />

    <TextView
        android:id="@+id/txt_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="55dp"
        android:hint="Surah Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation :"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_surah_no"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txt_surah_no" />

    <TextView
        android:id="@+id/txt_surah_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Translation"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_surah_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_surah_name" />

    <TextView
        android:id="@+id/txt_surah_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:hint="119"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>